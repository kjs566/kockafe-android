<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StyledButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/amatic_font</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@drawable/menu_button_text_color</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@drawable/menu_button_background</item>
    </style>

    <style name="StyledButtonSmaller" parent="StyledButton">
        <item name="android:fontFamily">@font/amatic_font</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="BackButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="StyledText">
        <item name="android:fontFamily">@font/amatic_font</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
